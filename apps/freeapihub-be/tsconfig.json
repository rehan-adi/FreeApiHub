{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"],
      "typeRoots": ["node_modules/@types"],
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@freeapihub/db": ["../packages/db/dist/index"]
      },
    },
    "include": ["src/**/*.ts", "src/global.d.ts"],
    "exclude": ["node_modules"]
  }
  