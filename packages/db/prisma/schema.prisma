generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String 
  name     String

  @@index([email])
}

model RandomUser {
  id          String      @id @default(cuid())
  gender      Gender
  firstName   String
  lastName    String
  email       String   @unique
  username    String   @unique
  password    String
  phone       String?
  age         Int
  streetNumber Int
  streetName  String?
  city        String
  state       String
  country     String
  postcode    Int
  picture     String  
  nationality String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


enum Gender {
  male
  female
  other
  prefer_not_to_say
}
